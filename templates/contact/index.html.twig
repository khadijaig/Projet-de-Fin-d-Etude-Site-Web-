{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}


    <style>
        .map-container-section {
            overflow:hidden;
            padding-bottom:56.25%;
            position:relative;
            height:0;
        }
        .map-container-section iframe {
            left:0;
            top:0;
            height:100%;
            width:100%;
            position:absolute;
        }
    </style>
    <!--Section: Contact v.2-->
    <!-- Section: Contact v.1 -->
    <section class="my-5" style="padding: 0px 100px 0px 100px">

        <!-- Section heading -->
        <h2 class="h1-responsive text-center my-5"> Contact</h2>
        <!-- Section description -->
        <p class="text-center w-responsive mx-auto pb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit.
            Fugit, error amet numquam iure provident voluptate esse quasi, veritatis totam voluptas nostrum quisquam
            eum porro a pariatur veniam.</p>

        <!-- Grid row -->
        <div class="row">

            <!-- Grid column -->
            <div class="col-lg-5 mb-lg-0 mb-4">

                <!-- Form with header -->
                <div class="card">
                    <div class="card-body">
                        <!-- Header -->
                        <div class="form-header accent-1">
                            <h3 class="mt-2"><i class="fas fa-envelope"></i> Envoyer nous un Email</h3>
                        </div>
                        <p class="dark-grey-text">Nous essairons de réponder á tous vos questions.</p>
                        <!-- Body -->
                        <div class="md-form">
                            <i class="fas fa-user prefix grey-text"></i>
                            <input type="text" id="form-name" class="form-control">
                            <label for="form-name">Votre nom</label>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <input type="text" id="form-email" class="form-control">
                            <label for="form-email">Votre email</label>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-tag prefix grey-text"></i>
                            <input type="text" id="form-Subject" class="form-control">
                            <label for="form-Subject">Objet</label>
                        </div>
                        <div class="md-form">
                            <i class="fas fa-pencil-alt prefix grey-text"></i>
                            <textarea id="form-text" class="form-control md-textarea" rows="3"></textarea>
                            <label for="form-text">Votre Message</label>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-warning">Envoyer</button>
                        </div>
                    </div>
                </div>
                <!-- Form with header -->

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-lg-7">

                <!--Google map-->
                <div id="map-container-section" class="z-depth-1-half map-container-section mb-4" style="height: 400px">
                    <iframe src="https://maps.google.com/maps?q=%20Bloc%20C%20Al%20Houda&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0"
                            style="border:0" allowfullscreen></iframe>
                </div>
                <!-- Buttons-->
                <div class="row text-center">
                    <div class="col-md-4">
                        <a class="btn-floating accent-1">
                            <i class="fas fa-map-marker-alt"></i>
                        </a>
                        <p>N° 190 Bloc C Al Houda </p>
                        <p class="mb-md-0">Agadir</p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn-floating accent-1">
                            <i class="fas fa-phone"></i>
                        </a>
                        <p>+ 01 234 567 89</p>
                        <p class="mb-md-0">Lundi - Samedi, 8:00-18:00</p>
                    </div>
                    <div class="col-md-4">
                        <a class="btn-floating accent-1">
                            <i class="fas fa-envelope"></i>
                        </a>
                        <p>sojafreres@gmail.com</p>

                    </div>
                </div>

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->

    </section>
    <!-- Section: Contact v.1 -->


{% endblock %}
