    </div>


    <div class="container">
        <h2 class="text-center font-weight-light">Les dérniers projets</h2>
        <div class="row flex">
            {% for Projet in Projets %}
                <div class="col-3">

                    <div class="card  mb-3">
                        {% if Projet.filename%}
                            <img  class="img-thumbnail" src="{{ vich_uploader_asset(Projet,'imageFile')}}" alt="card-img-top" style="width: 100%; height: auto">


                        {% endif %}
                        <div class="card-body text-dark">
                            <h5 class="card-title">
                                <a style="font-weight: bold" href="{{ path('Projet.afficher', {id: Projet.id, slug: Projet.slug}) }}" >{{ Projet.titre }}</a>
                            </h5>
                            <p class="card-text" style="font-weight: bold; font-size: large">{{ Projet.superficie }} km²</p>


                            <div class="badge bg-info text-wrap {% if Projet.etat == false %}badge bg-warning text-wrap {% endif %}">
                                {% if Projet.etat == true %}Projet Réalisé{% else %}

                                    Projet En cours ...{% endif%}</div>


                        </div>
                    </div>
                </div>



        {% endfor %}
        </div>
    </div>




